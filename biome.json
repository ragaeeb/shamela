{
    "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "on",
                "useSortedKeys": {
                    "level": "on",
                    "options": { "sortOrder": "natural" }
                }
            }
        }
    },
    "files": {
        "ignoreUnknown": true,
        "includes": ["**", "!node_modules", "!dist", "!build", "!coverage"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "always",
            "bracketSameLine": false,
            "bracketSpacing": true,
            "quoteStyle": "single",
            "semicolons": "always",
            "trailingCommas": "all"
        }
    },
    "linter": {
        "domains": {
            "project": "recommended"
        },
        "enabled": true,
        "rules": {
            "complexity": {
                "noExcessiveCognitiveComplexity": "warn",
                "useWhile": "error"
            },
            "recommended": true,
            "style": {
                "noNonNullAssertion": "off",
                "useBlockStatements": {
                    "fix": "safe",
                    "level": "error",
                    "options": {}
                },
                "useTemplate": {
                    "fix": "safe",
                    "level": "warn",
                    "options": {}
                }
            },
            "suspicious": {
                "noExplicitAny": "off"
            }
        }
    },
    "vcs": {
        "clientKind": "git",
        "enabled": true,
        "useIgnoreFile": true
    }
}
