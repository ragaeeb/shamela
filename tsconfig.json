{
    "compilerOptions": {
        "baseUrl": ".",
        "lib": ["ESNext", "DOM"],
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "outDir": "./dist",
        "paths": {
            "@/*": ["./src/*"]
        },
        "rootDir": "./src",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "ESNext",
        "types": ["bun-types", "node"]
    },
    "exclude": ["node_modules", "**/*.test.ts"],
    "include": ["src/**/*"]
}
