{
    "author": "Ragaeeb Haq",
    "default": "./dist/index.js",
    "dependencies": {
        "unzipper": "^0.12.3"
    },
    "description": "Library to interact with the Maktabah Shamela v4 APIs",
    "devDependencies": {
        "@biomejs/biome": "^2.2.4",
        "@types/bun": "^1.2.22",
